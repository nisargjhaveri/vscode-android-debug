{
    "name": "android-debug",
    "publisher": "nisargjhaveri",
    "displayName": "Android Debug",
    "description": "Debug Android Apps in VS Code",
    "version": "0.1.2",
    "repository": "https://github.com/nisargjhaveri/vscode-android-debug",
    "engines": {
        "vscode": "^1.56.0"
    },
    "categories": [
        "Debuggers"
    ],
    "activationEvents": [
        "onCommand:android-debug.pickAndroidProcess",
        "onCommand:android-debug.resumeWaitingProcess",
        "onDebugResolve:lldb",
        "onDebugResolve:java",
        "onDebugResolve:android-debug",
        "onDebugResolve:android-profile",
        "onCustomEditor:android-debug.profile"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "android-debug.resumeWaitingProcess",
                "title": "Resume process waiting for debugger",
                "category": "Android Debug"
            }
        ],
        "configuration": {
            "title": "Android Debug",
            "properties": {
                "android-debug.sdkRoot": {
                    "type": "string",
                    "description": "sdk root"
                },
                "android-debug.ndkRoot": {
                    "type": "string",
                    "description": "ndk root"
                },
                "android-debug.abiSupported": {
                    "description": "List of ABIs supported by the app",
                    "type": "array",
                    "items": {
                        "enum": [
                            "armeabi",
                            "armeabi-v7a",
                            "arm64-v8a",
                            "x86",
                            "x86_64"
                        ]
                    },
                    "default": [
                        "armeabi-v7a",
                        "arm64-v8a",
                        "x86",
                        "x86_64"
                    ]
                },
                "android-debug.abiMap": {
                    "description": "Map android ABI to custom strings, use with ${command:mappedAbi}.",
                    "type": "object",
                    "properties": {
                        "armeabi": {
                            "type": "string"
                        },
                        "armeabi-v7a": {
                            "type": "string"
                        },
                        "arm64-v8a": {
                            "type": "string"
                        },
                        "x86": {
                            "type": "string"
                        },
                        "x86_64": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "debuggers": [
            {
                "type": "lldb",
                "variables": {
                    "pickAndroidProcess": "android-debug.pickAndroidProcess",
                    "abi": "android-debug.getBestAbi",
                    "mappedAbi": "android-debug.getBestMappedAbi"
                },
                "configurationAttributes": {
                    "attach": {
                        "properties": {
                            "androidTarget": {
                                "description": "Target Android. Specify target serial number or `select` to select target.",
                                "anyOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "enum": [
                                            false,
                                            "select",
                                            "last-selected"
                                        ]
                                    }
                                ]
                            },
                            "androidPackageName": {
                                "description": "Package name of the app to debug",
                                "type": "string"
                            },
                            "androidAbiSupported": {
                                "description": "List of ABIs supported by the app",
                                "type": "array",
                                "items": {
                                    "enum": [
                                        "armeabi",
                                        "armeabi-v7a",
                                        "arm64-v8a",
                                        "x86",
                                        "x86_64"
                                    ]
                                },
                                "default": [
                                    "armeabi-v7a",
                                    "arm64-v8a",
                                    "x86",
                                    "x86_64"
                                ]
                            },
                            "androidAbi": {
                                "description": "The ABI that is installed in case of split APKs.",
                                "enum": [
                                    "select",
                                    "armeabi",
                                    "armeabi-v7a",
                                    "arm64-v8a",
                                    "x86",
                                    "x86_64"
                                ]
                            },
                            "androidAbiMap": {
                                "description": "Map of android abi to custom string",
                                "type": "object",
                                "properties": {
                                    "armeabi": {
                                        "type": "string"
                                    },
                                    "armeabi-v7a": {
                                        "type": "string"
                                    },
                                    "arm64-v8a": {
                                        "type": "string"
                                    },
                                    "x86": {
                                        "type": "string"
                                    },
                                    "x86_64": {
                                        "type": "string"
                                    }
                                }
                            },
                            "symbolSearchPaths": {
                                "description": "List of paths to where your unstripped so files are located",
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    }
                }
            },
            {
                "type": "java",
                "variables": {
                    "pickAndroidProcess": "android-debug.pickAndroidProcess"
                },
                "configurationAttributes": {
                    "attach": {
                        "properties": {
                            "androidTarget": {
                                "description": "Target Android. Specify target serial number or `select` to select target.",
                                "anyOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "enum": [
                                            false,
                                            "select",
                                            "last-selected"
                                        ]
                                    }
                                ]
                            }
                        }
                    }
                }
            },
            {
                "type": "android-debug",
                "label": "Android",
                "variables": {
                    "pickAndroidProcess": "android-debug.pickAndroidProcess",
                    "abi": "android-debug.getBestAbi",
                    "mappedAbi": "android-debug.getBestMappedAbi"
                },
                "configurationAttributes": {
                    "attach": {
                        "required": [
                            "pid"
                        ],
                        "properties": {
                            "target": {
                                "description": "Target serial or `select` to select target device.",
                                "anyOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "enum": [
                                            "select",
                                            "last-selected"
                                        ]
                                    }
                                ],
                                "default": "select"
                            },
                            "pid": {
                                "description": "The Android process to attach.",
                                "anyOf": [
                                    {
                                        "type": "number"
                                    },
                                    {
                                        "enum": [
                                            "${command:pickAndroidProcess}"
                                        ]
                                    }
                                ]
                            },
                            "packageName": {
                                "description": "The package name of the app.",
                                "type": "string"
                            },
                            "mode": {
                                "description": "Debugger mode, `java`, `native` or `dual`",
                                "enum": [
                                    "native",
                                    "java",
                                    "dual"
                                ],
                                "default": "java"
                            },
                            "resumeProcess": {
                                "description": "Resume the process in case it is waiting for debugger. Only applicable in 'native' mode.",
                                "type": "boolean",
                                "default": false
                            },
                            "native": {
                                "description": "Configuration for native debugger.",
                                "type": "object",
                                "properties": {
                                    "abiSupported": {
                                        "description": "List of ABIs supported by the app",
                                        "type": "array",
                                        "items": {
                                            "enum": [
                                                "armeabi",
                                                "armeabi-v7a",
                                                "arm64-v8a",
                                                "x86",
                                                "x86_64"
                                            ]
                                        },
                                        "default": [
                                            "armeabi-v7a",
                                            "arm64-v8a",
                                            "x86",
                                            "x86_64"
                                        ]
                                    },
                                    "abi": {
                                        "description": "The ABI to be used in case of split APKs.",
                                        "enum": [
                                            "select",
                                            "armeabi",
                                            "armeabi-v7a",
                                            "arm64-v8a",
                                            "x86",
                                            "x86_64"
                                        ]
                                    },
                                    "abiMap": {
                                        "description": "Map android ABI to custom strings, use with ${command:mappedAbi}.",
                                        "type": "object",
                                        "properties": {
                                            "armeabi": {
                                                "type": "string"
                                            },
                                            "armeabi-v7a": {
                                                "type": "string"
                                            },
                                            "arm64-v8a": {
                                                "type": "string"
                                            },
                                            "x86": {
                                                "type": "string"
                                            },
                                            "x86_64": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "symbolSearchPaths": {
                                        "description": "List of paths to where your unstripped so files are located.",
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "java": {
                                "description": "Configuration for java debugger.",
                                "type": "object",
                                "properties": {
                                    "sourcePaths": {
                                        "description": "Path to your java source code for the app.",
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "launch": {
                        "required": [
                            "launchActivity"
                        ],
                        "oneOf": [
                            {
                                "required": [
                                    "packageName"
                                ]
                            },
                            {
                                "required": [
                                    "apkPath"
                                ]
                            }
                        ],
                        "properties": {
                            "target": {
                                "description": "Target serial or `select` to select target device.",
                                "anyOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "enum": [
                                            "select",
                                            "last-selected"
                                        ]
                                    }
                                ],
                                "default": "select"
                            },
                            "apkPath": {
                                "description": "The apk to install and debug",
                                "type": "string",
                                "default": "${workspaceFolder}/app/build/outputs/apk/debug/app-debug.apk"
                            },
                            "packageName": {
                                "description": "The package name of the app",
                                "type": "string"
                            },
                            "launchActivity": {
                                "description": "Activity to launch",
                                "type": "string",
                                "default": ".MainActivity"
                            },
                            "mode": {
                                "description": "Debugger mode, `java`, `native` or `dual`",
                                "enum": [
                                    "native",
                                    "java",
                                    "dual"
                                ],
                                "default": "java"
                            },
                            "resumeProcess": {
                                "description": "Resume the process in case it is waiting for debugger. Only applicable in 'native' mode.",
                                "type": "boolean",
                                "default": true
                            },
                            "native": {
                                "description": "Configuration for native debugger.",
                                "type": "object",
                                "properties": {
                                    "abiSupported": {
                                        "description": "List of ABIs supported by the app",
                                        "type": "array",
                                        "items": {
                                            "enum": [
                                                "armeabi",
                                                "armeabi-v7a",
                                                "arm64-v8a",
                                                "x86",
                                                "x86_64"
                                            ]
                                        },
                                        "default": [
                                            "armeabi-v7a",
                                            "arm64-v8a",
                                            "x86",
                                            "x86_64"
                                        ]
                                    },
                                    "abi": {
                                        "description": "The ABI to be used in case of split APKs.",
                                        "enum": [
                                            "select",
                                            "armeabi",
                                            "armeabi-v7a",
                                            "arm64-v8a",
                                            "x86",
                                            "x86_64"
                                        ]
                                    },
                                    "abiMap": {
                                        "description": "Map android ABI to custom strings, use with ${command:mappedAbi}.",
                                        "type": "object",
                                        "properties": {
                                            "armeabi": {
                                                "type": "string"
                                            },
                                            "armeabi-v7a": {
                                                "type": "string"
                                            },
                                            "arm64-v8a": {
                                                "type": "string"
                                            },
                                            "x86": {
                                                "type": "string"
                                            },
                                            "x86_64": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "symbolSearchPaths": {
                                        "description": "List of paths to where your unstripped so files are located.",
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            },
                            "java": {
                                "description": "Configuration for java debugger.",
                                "type": "object",
                                "properties": {
                                    "sourcePaths": {
                                        "description": "Path to your java source code for the app.",
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            },
            {
                "type": "android-profile",
                "label": "Android Profile",
                "variables": {
                    "pickAndroidProcess": "android-debug.pickAndroidProcess",
                    "abi": "android-debug.getBestAbi",
                    "mappedAbi": "android-debug.getBestMappedAbi"
                },
                "configurationAttributes": {
                    "launch": {
                        "oneOf": [
                            {
                                "required": [
                                    "packageName"
                                ]
                            },
                            {
                                "required": [
                                    "pid"
                                ]
                            }
                        ],
                        "properties": {
                            "target": {
                                "description": "Target serial or `select` to select target device.",
                                "anyOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "enum": [
                                            "select",
                                            "last-selected"
                                        ]
                                    }
                                ],
                                "default": "select"
                            },
                            "packageName": {
                                "description": "The package name of the app",
                                "type": "string"
                            },
                            "pid": {
                                "description": "The Android process to attach.",
                                "anyOf": [
                                    {
                                        "type": "number"
                                    },
                                    {
                                        "enum": [
                                            "${command:pickAndroidProcess}"
                                        ]
                                    }
                                ]
                            },
                            "frequency": {
                                "description": "Sampling frequency. Number of samples collected per second",
                                "type": "number",
                                "default": 4000
                            },
                            "event": {
                                "description": "Event to record. See `simpleperf list` for available events",
                                "anyOf": [
                                    {
                                        "type": "string"
                                    },
                                    {
                                        "enum": [
                                            "cpu-clock",
                                            "task-clock"
                                        ]
                                    }
                                ],
                                "default": "cpu-clock"
                            },
                            "recordAdditionalArgs": {
                                "description": "Additional arguments to pass to `simpleperf record` command.",
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            },
                            "native": {
                                "description": "Configuration for native debugger.",
                                "type": "object",
                                "properties": {
                                    "abiSupported": {
                                        "description": "List of ABIs supported by the app",
                                        "type": "array",
                                        "items": {
                                            "enum": [
                                                "armeabi",
                                                "armeabi-v7a",
                                                "arm64-v8a",
                                                "x86",
                                                "x86_64"
                                            ]
                                        },
                                        "default": [
                                            "armeabi-v7a",
                                            "arm64-v8a",
                                            "x86",
                                            "x86_64"
                                        ]
                                    },
                                    "abi": {
                                        "description": "The ABI to be used in case of split APKs.",
                                        "enum": [
                                            "select",
                                            "armeabi",
                                            "armeabi-v7a",
                                            "arm64-v8a",
                                            "x86",
                                            "x86_64"
                                        ]
                                    },
                                    "abiMap": {
                                        "description": "Map android ABI to custom strings, use with ${command:mappedAbi}.",
                                        "type": "object",
                                        "properties": {
                                            "armeabi": {
                                                "type": "string"
                                            },
                                            "armeabi-v7a": {
                                                "type": "string"
                                            },
                                            "arm64-v8a": {
                                                "type": "string"
                                            },
                                            "x86": {
                                                "type": "string"
                                            },
                                            "x86_64": {
                                                "type": "string"
                                            }
                                        }
                                    },
                                    "symbolSearchPaths": {
                                        "description": "List of paths to where your unstripped so files are located.",
                                        "type": "array",
                                        "items": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        ],
        "customEditors": [
            {
                "viewType": "android-debug.profile",
                "displayName": "Android Profile",
                "selector": [
                    {
                        "filenamePattern": "*.trace"
                    }
                ],
                "priority": "option"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run esbuild-base -- --minify && npm run build-profiler",
        "typecheck": "tsc -noEmit",
        "protoc": "pbjs -t static-module -w commonjs -o ./src/profile-converter/simpleperf/simpleperf_report.js ./src/profile-converter/simpleperf/simpleperf_report.proto && pbts -o ./src/profile-converter/simpleperf/simpleperf_report.d.ts ./src/profile-converter/simpleperf/simpleperf_report.js",
        "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
        "build": "npm run esbuild-base -- --sourcemap",
        "watch": "npm run esbuild-base -- --sourcemap --watch",
        "build-profiler": "cd firefox-profiler && yarn install && yarn run build-prod",
        "lint": "eslint src --ext ts",
        "pretest": "tsc -p ./ && npm run lint",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.2.0",
        "@types/ini": "^1.3.31",
        "@types/mocha": "^9.1.1",
        "@types/node": "16.x",
        "@types/serve-handler": "^6.1.4",
        "@types/stoppable": "^1.1.3",
        "@types/teen_process": "^2.0.4",
        "@types/vscode": "^1.56.0",
        "@typescript-eslint/eslint-plugin": "^5.30.0",
        "@typescript-eslint/parser": "^5.30.0",
        "@vscode/test-electron": "^2.1.5",
        "esbuild": "^0.25.2",
        "eslint": "^8.18.0",
        "glob": "^8.0.3",
        "mocha": "^10.0.0",
        "protobufjs-cli": "^1.1.3",
        "typescript": "^5.5.4"
    },
    "dependencies": {
        "@vscode/debugadapter": "^1.56.1",
        "appium-adb": "^12.5.2",
        "ini": "^3.0.0",
        "long": "^5.2.3",
        "protobufjs": "^7.4.0",
        "serve-handler": "^6.1.6",
        "stoppable": "^1.1.0",
        "teen_process": "^2.3.1"
    }
}
